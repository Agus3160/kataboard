{
  "manifest_version": 3,
  "name": "Mi SPA Extension",
  "description": "Abre la SPA (index.html) en una nueva pestaña al hacer click en la extensión",
  "version": "1.0.0",
  "action": {
    "default_title": "Abrir SPA",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],
  "host_permissions": [],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "minimum_chrome_version": "88"
}
